<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://browseCaption"
        focusComponent="table"
        messagesPack="com.non.ocat.web.interviewconfig">
    <data>
        <collection id="interviewConfigsDc"
                    class="com.non.ocat.entity.InterviewConfig"
                    view="interviewConfig-view">
            <loader id="interviewConfigsLd">
                <query>
                    <![CDATA[select e from ocat_InterviewConfig e]]>
                </query>
            </loader>
        </collection>
        <instance id="interviewConfigDc"
                  class="com.non.ocat.entity.InterviewConfig"
                  view="interviewConfig-view">
            <loader/>
        </instance>
    </data>
    <actions>
        <action id="save" icon="icons/ok.png" caption="mainMsg://actions.Ok" shortcut="CTRL-ENTER"/>
        <action id="cancel" icon="icons/cancel.png" caption="mainMsg://actions.Cancel" description="Esc"/>
    </actions>
    <dialogMode height="600" width="800"/>
    <layout>
        <split id="split" height="100%" orientation="horizontal" reversePosition="true" width="100%">
            <vbox id="lookupBox" expand="table" height="100%" margin="false,true,false,false" spacing="true">
                <filter id="filter" applyTo="table" dataLoader="interviewConfigsLd">
                    <properties include=".*"/>
                </filter>
                <groupTable id="table"
                            width="100%"
                            dataContainer="interviewConfigsDc">
                    <actions>
                        <action id="create" type="create"/>
                        <action id="edit" type="edit"/>
                        <action id="remove" type="remove"/>
                    </actions>
                    <columns>
                        <column id="itemCode"/>
                        <column id="itemName"/>
                        <column id="itemType"/>
                        <column id="parent"/>
                        <column id="beginDate"/>
                        <column id="endDate"/>
                    </columns>
                    <rowsCount/>
                    <buttonsPanel id="buttonsPanel"
                                  alwaysVisible="true">
                        <button id="createBtn" action="table.create"/>
                        <button id="editBtn" action="table.edit"/>
                        <button id="removeBtn" action="table.remove"/>
                    </buttonsPanel>
                </groupTable>
                <hbox id="lookupActions" spacing="true" visible="false">
                    <button action="lookupSelectAction"/>
                    <button action="lookupCancelAction"/>
                </hbox>
            </vbox>
            <vbox id="editBox" height="100%" margin="false,false,false,true" expand="fieldGroupBox" spacing="true">
                <scrollBox id="fieldGroupBox">
                    <form id="form" dataContainer="interviewConfigDc">
                        <column width="250px">
                            <textField id="itemTypeField" property="itemType"/>
                            <textField id="itemCodeField" property="itemCode"/>
                            <textArea id="itemNameField" property="itemName" rows="5"/>
                            <pickerField id="parentField" property="parent">
                                <actions>
                                    <action id="lookup" type="picker_lookup"/>
                                    <action id="clear" type="picker_clear"/>
                                </actions>
                            </pickerField>
                            <dateField id="beginDateField" property="beginDate"/>
                            <dateField id="endDateField" property="endDate"/>
                        </column>
                    </form>
                </scrollBox>
                <hbox id="actionsPane" spacing="true" visible="false">
                    <button id="saveBtn" action="save"/>
                    <button id="cancelBtn" action="cancel"/>
                </hbox>
            </vbox>
        </split>
    </layout>
</window>
